@page "{id}"
@model MusicLibrary.Pages.Songs.DeleteModel

@{
    ViewData["Title"] = "Delete Song";
}
<h2>Delete Song</h2>
<h3>Are you sure you want to delete this song?</h3>

@if (Model.Song is not null)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Song.Title</h5>
            <p class="card-text">
                <strong>Artist:</strong> @Model.Song.Artist.Name<br />
                <strong>Album:</strong> @Model.Song.Album.Title<br />
                <strong>Genre:</strong> @Model.Song.Genre<br />
                <strong>Release Year:</strong> @Model.Song.ReleaseYear
            </p>
        </div>
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Details" asp-route-id="@Model.Song.Id" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <h3>Song not found</h3>
    <a asp-page="Index" class="btn btn-secondary">Back to Songs</a>
}