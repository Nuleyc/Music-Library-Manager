@page "{id}"
@model MusicLibrary.Pages.Songs.EditModel

@{
    ViewData["Title"] = "Edit Song";
}

<h2>Edit Song</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ReleaseYear" class="form-label"></label>
        <input asp-for="Input.ReleaseYear" class="form-control" />
        <span asp-validation-for="Input.ReleaseYear" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Genre" class="form-label"></label>
        <input asp-for="Input.Genre" class="form-control" />
        <span asp-validation-for="Input.Genre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ArtistId" class="form-label"></label>
        <select asp-for="Input.ArtistId" class="form-select">
            <option value="0">-- Select Artist --</option>
            @foreach (var artist in Model.Artists)
            {
                <option value="@artist.Id">@artist.Name</option>
            }
        </select>
        <span asp-validation-for="Input.ArtistId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.AlbumId" class="form-label"></label>
        <select asp-for="Input.AlbumId" class="form-select">
            <option value="0">-- Select Album --</option>
            @foreach (var album in Model.Albums)
            {
                <option value="@album.Id">@(album.Title) (@(album.ReleaseYear))</option>
            }
        </select>
        <span asp-validation-for="Input.AlbumId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}