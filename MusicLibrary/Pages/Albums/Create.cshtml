@page
@model MusicLibrary.Pages.Albums.CreateModel
@{
    ViewData["Title"] = "Create Album";
}

<h2>Create Album</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ArtistId" class="form-label"></label>
        <select asp-for="Input.ArtistId" class="form-select">
            <option value="0">-- Select Artist --</option>
            @foreach (var artist in Model.Artists)
            {
                <option value="@artist.Id">@artist.Name</option>
            }
        </select>
        <span asp-validation-for="Input.ArtistId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.ReleaseYear" class="form-label"></label>
        <input asp-for="Input.ReleaseYear" class="form-control" />
        <span asp-validation-for="Input.ReleaseYear" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}